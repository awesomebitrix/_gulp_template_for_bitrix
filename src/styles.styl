@require 'styles/variables.styl'

@font-face
	font-family 'font_main'
	src url('../fonts/your_font.eot')
	src url('../fonts/your_font.eot?#iefix') format('embedded-opentype'),
		url('../fonts/your_font.woff2') format('woff2'),
		url('../fonts/your_font.woff') format('woff'),
		url('../fonts/your_font.ttf') format('truetype'),
		url('../fonts/your_font.svg#pf_dintext_proregular') format('svg')
	font-weight normal
	font-style normal

body
	font-size 0.875em
	color color_text
	font-family font_main

.main_wrap
	margin 0 auto

.h, h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6
	text-transform uppercase
	font-weight bold
	margin 0 0 .5em
	line-height 1

* + h1, * + .h1, * + h2, * + .h2, * + h3, * + .h3, * + h4, * + .h4, * + h5, * + .h5, * + h6, * + .h6
	margin-top 1em

h1, .h1
	font-size h1
h2, .h2
	font-size h2
h3, .h3
	font-size h3
h4, .h4
	font-size h4
h5, .h5
	font-size h5
h6, .h6
	font-weight normal

a
	color color_text
	text-decoration underline
	&:hover
		color color_text

p
	line-height 1.5
	margin-bottom .5em