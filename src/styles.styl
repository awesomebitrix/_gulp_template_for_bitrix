body
	font-size 0.875em
	color #000

h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6
	text-transform uppercase
	font-weight bold
	margin 1em 0 .5em
	line-height 1

h1, .h1
	font-size 3em
	letter-spacing -1px
h2, .h2
	font-size 2.6em
h3, .h3
	font-size 2.2em
h4, .h4
	font-size 1.8em
h5, .h5
	font-size 1.4em
h6, .h6
	font-weight normal


a
	text-decoration underline
	&:hover
		color lightness(#000, 60%)

p
	line-height 1.5
	margin-bottom .5em

em, i, dfn
	font-style italic
	font-weight bold